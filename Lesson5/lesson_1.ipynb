   "source": [
    "#學生總分為300\n",
    "#有些學生可以加5%\n",
    "\n",
    "score = float(input('請輸入學生的分數(最高300分):'))\n",
    "\n",
    "is_add = input('學生是否符合加分條件？(Y,N)')\n",
    "\n",
    "#這個叫巢狀判斷(如果有兩個條件，就用這個判斷)\n",
    "\n",
    "if is_add == 'y':\n",
    "    score *= 1.05\n",
    "    if score > 300: \n",
    "        score = 300\n",
    "        \n",
    "\n",
    "print('學生的總得分為:' , round( score , ndigits = 2 ))\n"
   ]
  }
